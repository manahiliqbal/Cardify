{
    "builds": [
      {
        "src": "flashcards-client/package.json", 
        "use": "@vercel/static-build", 
        "config": {
          "distDir": "flashcards-client/build"
        }
      },
      {
        "src": "flashcards-server/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/flashcards-server/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/flashcards-client/$1"
      }
    ]
  }
  