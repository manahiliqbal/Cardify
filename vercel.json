{
    "builds": [
      {
        "src": "flashcards-client/package.json", 
        "use": "@vercel/static-build", 
        "config": {
          "distDir": "flashcards-client/build"
        }
      },
      {
        "src": "flashcards-server/server.js", 
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      { 
        "source": "/api/(.*)", 
        "destination": "/flashcards-server/server.js" 
      },
      { 
        "source": "/(.*)", 
        "destination": "/flashcards-client/$1" 
      }
    ]
  }
  